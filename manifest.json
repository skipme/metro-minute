{
	"manifest_version": 2,
	"name": "metro-minute",
	"version": "0.1.1",

	"author": "Vitaliy (cerriun@gmail.com)",
	"developer": {
	  "name": "Vitaliy",
	  "url": "https://github.com/skipme/metro-minute"
	},
	"applications": {
	  "gecko": {
	    "strict_min_version": "60.0"
	  }
	},
	
	"icons": {
	  "32": "icon.png",
	  "64": "icon.png"
	},
	"options_ui": {
	  "page": "config.html",
	  "open_in_tab": false
	},
	"background": {
    	"page": "main.html"
  	},

	"web_accessible_resources": ["config.html", "msk.json"],
  	"content_scripts": [
	    {
	      "matches": ["*://*.hh.ru/search/*", "*://*.hh.ru/vacancy/*"],
	      "js": ["CONST.js", "metrocom.js", "page_hhru.js", "marker.js"]
	    },
	    {
	      "matches": ["*://*.avito.ru/*"],
	      "js": ["CONST.js", "metrocom.js", "page_avitoru.js", "marker.js"]
	    },
	    {
	      "matches": ["*://*.auto.ru/*"],
	      "js": ["CONST.js", "metrocom.js", "page_autoru.js", "marker.js"]
	    }
  	],
  	"permissions": [
  		 "*://*.hh.ru/*",
  		 "*://*.avito.ru/*",
  		 "*://*.auto.ru/*",
  		//"activeTab",
  		"tabs",
  		"storage"
  	]
}
